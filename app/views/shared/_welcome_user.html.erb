<div class="col-md-4 welcome_form">
  <%= form_tag [:sessions, :create], role: 'form', class: 'form-horizontal', method: :post, remote: true do |f|%>
  <div class="form-group">
    <div class="input-group">
      <%= text_field_tag :user_name, nil, placeholder: 'What is ur name', class: 'form-control', required: true%>
      <span class="input-group-addon">user name</span>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <% options = ['Yoda', 'Valley Girl', 'Binary Code'] %>
      <%= select_tag :dialect, options_for_select(options), class: 'form-control', prompt: "Choose one", required: true %>
      <span class="input-group-addon">dialect</span>
    </div>
  </div>

  <div classs="form-group">
    <%= submit_tag "Take me In", class: 'btn btn-primary pull-right'%>
  </div>
  <% end %>
</div>

